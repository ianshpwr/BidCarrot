datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  wallet    Int      @default(50000)

  // Relations
  bids      Bid[]
  auctions  Auction[] @relation("SellerAuctions")
  winnerOf  Auction[] @relation("Winner")

  createdAt DateTime @default(now())
}

model Auction {
  id            String         @id @default(uuid())
  title         String
  description   String
  basePrice     Int
  durationMs    Int
  endTime       DateTime
  status        AuctionStatus  @default(ACTIVE)

  // Seller relation
  sellerId      String
  seller        User           @relation("SellerAuctions", fields: [sellerId], references: [id])

  // Bids
  bids          Bid[]

  // Winner relation (optional)
  winnerId      String?
  winner        User?          @relation("Winner", fields: [winnerId], references: [id])

  highestBid    Int            @default(0)

  // Not a relation, just storing userId
  currentHolder String?

  createdAt     DateTime       @default(now())
}

model Bid {
  id        String   @id @default(uuid())
  amount    Int
  time      DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  auctionId String
  auction   Auction  @relation(fields: [auctionId], references: [id])
}

enum AuctionStatus {
  ACTIVE
  ENDED
  PAYMENT_PENDING
  COMPLETED
  CANCELLED
}
