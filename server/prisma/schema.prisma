// ----------------------
//  Prisma Configuration
// ----------------------
datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}



// ----------------------
//        Models
// ----------------------

// 1. USERS
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String   // hashed password
  balance   Decimal  @default(0.0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  listedAssets    Asset[]    @relation("UserListedAssets")
  acquiredAssets  Asset[]    @relation("UserAcquiredAssets")
  bids            Bid[]
}



// 2. ASSETS (Items Available for Bidding)
model Asset {
  id                 String    @id @default(uuid())
  productName        String
  productType        String
  description        String?
  startingAmount     Decimal
  currentHighestBid  Decimal   @default(0.0)

  status             AssetStatus @default(ACTIVE)

  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  // Relations
  listedById         String
  listedBy           User      @relation("UserListedAssets", fields: [listedById], references: [id])

  acquiredById       String? 
  acquiredBy         User?     @relation("UserAcquiredAssets", fields: [acquiredById], references: [id])

  finalAmount        Decimal?
  bids               Bid[]
  images             AssetImage[]
}



// 3. BIDS (Bidding History)
model Bid {
  id        String   @id @default(uuid())
  amount    Decimal
  createdAt DateTime @default(now())

  // Foreign Keys
  assetId   String
  asset     Asset    @relation(fields: [assetId], references: [id])

  userId    String
  user      User     @relation(fields: [userId], references: [id])
}



// 4. ASSET IMAGES (Optional but very useful)
model AssetImage {
  id       String @id @default(uuid())
  url      String

  assetId  String
  asset    Asset  @relation(fields: [assetId], references: [id])
}



// ----------------------
//      ENUMS
// ----------------------
enum AssetStatus {
  ACTIVE
  SOLD
  EXPIRED
  CANCELLED
}
